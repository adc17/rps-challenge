<% @player_1 = @game.player_1.name %>
<% @player_2 = @game.player_2.name %>

<h1><%= "#{@player_1} vs #{@player_2}" %></h1>
<%= erb :image_partial %>
<br>
<form action="/two-choice" method="post">
  <input type="radio" id="rock" value="rock" name="choice">Rock<br>
  <input type="radio" id="paper" value="paper" name="choice">Paper<br>
  <input type="radio" id="scissors" value="scissors" name="choice">Scissors<br>
  <input type="submit" value="Submit">
</form>
<h3><%= "#{@player_1}, make your choice!" %></h3>
